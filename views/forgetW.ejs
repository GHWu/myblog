<% include header.ejs %>
<div class="page-header">
    <h1 align="center">Please enter your Verification Code</h1>
</div>
<form class="form-horizontal" method="post">
    <div class="container">
        <div class="row">
            <div class="form-group col-xs-6 col-sm-4"></div>
            <div class="form-group col-xs-6 col-sm-4">
                <div align="center">
                    <label for="code" class="codetext">Verification Code</label>
                    <input class="form-control" id="code" type="text" name="code"></input>
                </div>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="form-group col-xs-6 col-sm-4"></div>
            <div class="form-group col-xs-6 col-sm-4">
                <div align="center">
                    <label for="password" class="logintext">New Password</label>
                    <input class="form-control" id="password" type="password" name="password"></input>
                </div>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="form-group col-xs-6 col-sm-4"></div>
            <div class="form-group col-xs-6 col-sm-4">
                <div align="center">
                    <label for="apassword" class="logintext">Repeat password</label>
                    <input class="form-control" id="apassword" type="password" name="apassword"></input>
                </div>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="form-group col-xs-6 col-sm-4"></div>
            <div class="form-group col-xs-6 col-sm-4">
                <div align="center">
                    <div class="btn-group btn-group-lg" >
                        <button type="submit" class="btn btn-default" id="modify">Modify</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/><br/><br/><br/><br/>
</form>
<% include footer.ejs %>